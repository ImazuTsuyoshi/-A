<% provide(:class_text, 'basic3-info') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【上長からの残業申請】</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
          <%= render 'shared/error_messages', object: @user %>
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
             <tr>
               <td>日付</td>
               <td>曜日</td>
               <td>終了予定時間</td>
               <td>終了表示時刻</td>
               <td>業務処理内容</td>
               <td>指示者確認㊞</td>
             </tr>
             <tr>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
             </tr>
          </table>   
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!--モーダルウインドウ表示-->
<div id="edit1-basic-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>