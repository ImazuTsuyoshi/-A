<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-info" %>　【<%= l(@first_day, format: :middle) %>】勤怠管理表　<%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-info" %></td>
      <td>指定勤務開始時間：<%= format_basic_info(@user.designated_work_start_time) %><br>指定勤務終了時間 : <%= format_basic_info(@user.designated_work_end_time) %></br>
      </td>
      <td colspan = "3">基本時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>月初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数: <%= @worked_sum %>日</td>
      <td>月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<% if current_user.superior?  %>
  <% if %>
    <div>
      <p>
        【所属長承認申請のお知らせ】
        <span>
          <%= link_to "#{ @count1 }件の通知があります", edit_approval_user_attendance_path(@user) , remote: true, :style=>"color:red;" %>
        </span> 
      </p>
    </div>
  <% else %>
    <div>
      <p>
        【所属長承認申請のお知らせ】
      </p>
    </div>
  <% end %>
  <% if %>
    <div>
      <p>
        【勤怠変更申請のお知らせ】
        <span>
          <%= link_to "#{ @count2 }件の通知があります", edit_change_user_attendance_path(@user) , remote: true, :style=>"color:red;" %> 
        </span>
      </p>
    </div>
  <% else %>
    <div>
      <p>
        【勤怠変更申請のお知らせ】
      </p>
    </div>
  <% end %>  
  <% if %>
    <div>
      <p>
        【残業申請のお知らせ】
        <span>
          <%= link_to "#{ @count3 }件の通知があります", edit_request_overtime_user_attendance_path(@user) , remote: true, :style=>"color:red;" %> 
        </span>
      </p>
    </div>
  <% else %>
    <div>
      <p>
        【残業申請のお知らせ】
      </p>
    </div>
  <% end %>
<% end %>  
    
      

<div>
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV出力", user_path(format: :csv), class: "btn btn-primary" %>
  <h5><%= link_to "勤怠修正ログ（承認済）", users_correction_log_path,class: "btn btn-primary" %></h5>
  
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan = "4">残業申請</th>
        <th rowspan = "4">日付</th>
        <th rowspan = "4">曜日</th>
      </tr>
    <thoot>
      <tr>
        <th colspan = "8">【実績】</th>
        <th colspan = "6">【所定外勤務】</th>
      </tr>
    </thoot>
      <tr>
        <th colspan = "3">出勤</th>
        <th colspan = "3">退勤</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "2">終了予定時間</th>
        <th rowspan = "2">時間外時間</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", edit_overtime_user_attendance_path(@user, date: day.worked_on), remote: true, class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 6 %>
              <font color="Blue"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% elsif day.worked_on.wday == 0 %>
              <font color="Red"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% else %>
              <%= $days_of_the_week[day.worked_on.wday] %>
            <% end %>
          <td><%= format_hour(day.started_at) if day.started_at.present? %></td>
          <td><%= format_min(day.started_at)  if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= format_hour(day.finished_at) if day.finished_at.present? %></td>
          <td><%= format_min(day.finished_at)  if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              
            <% end %>
          </td>
          <td><%= day.note %></td>
          <!-- 終了予定時間 -->
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
        <tfoot>
        <!--rowspan:縦結合、 colspan: 横結合-->
      <tr>
        <td></td>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
        <td>
           <%= form_with(model: @user, url: "", method: :patch) do |f| %>
             <%= f.collection_select :update_month, User.where(superior: true), :name, :name %>
           <%= f.submit "申請", class: "btn btn-primary btn-block" %>   
           <% end %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<div id="edit_approval" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit_change" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit-overtime" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit_request_overtime" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>