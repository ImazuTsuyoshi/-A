<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to "⇦ ", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>　 <%= l(@first_day, format: :middle) %>　時間管理表　 <%= link_to " ⇨", user_path(date: @first_day.next_month), class: "btn btn-primary" %></td>
      <td>指定勤務開始時間<br>指定勤務終了時間</br> 
      </td>
      <td colspan  = "3">
        <br>基本時間:</br>  
      </td>
      <td>
        <br>初日 ：<%= l(@first_day, format: :short) %></br>
      </td>
    </tr>
    
    <tr>
      <td>所属: <%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名: <%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数: <%= @worked_sum %>日</td>
      <td>締め ：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<div class="btn-users-show">
  <h4>
    <% if current_user.superior? && !current_user?(@users) %>
      <%= link_to "【所属長承認申請のお知らせ】", edit4_basic_info_user_path(@user), remote: true , class: "btn1" %>
    <% end %>
    </h4>
  <h4>
    <% if current_user.superior? && !current_user?(@users) %>
      <%= link_to "【勤怠変更申請のお知らせ】", edit_basic_info_user_path(@user), remote: true , class: "btn1" %>
    <% end %>  
  </h4>
  <h4>
    <% if current_user.superior? && !current_user?(@users) %>
      <%= link_to "【残業申請のお知らせ】", edit2_basic_info_user_path(@user), remote: true , class: "btn1" %>
    <% end %>  
  </h4>
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path , class: "btn btn-primary" %>
  <%= link_to "CSV出力", user_path(@user, @user, params:{first_day: @first_day },format: :csv), class: "btn btn-primary" %>
  <h5><%= link_to "勤怠修正ログ(承認済)", "" , class: "btn btn-primary" %><h5>
</div>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan = "3"><br>残業申請</br></th>
        <th rowspan = "3"><br>日付</br></th>
        <th rowspan = "3"><br>曜日</br></th>
        <th colspan = "8">【実績】</th>
        <th colspan = "5">所定外勤務</th>
      </tr>
      <tr>
        <td colspan = "3">出社</td>
        <td colspan = "3">退社</td>
        <td rowspan = "2"><br>在社時間</br></td>
        <td rowspan = "2"><br>備考</br></td>
        <td colspan = "2">終了予定時間</td>
        <td rowspan = "2"><br>時間外時間</br></td>
        <td rowspan = "2"><br>業務処理内容</br></td>
        <td rowspan = "2"><br>指示者確認㊞</br></td>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
        <td><%= link_to  "残業申請", "", remote: true  , class: "btn btn-primary" %></td>  
        <td><%= l(day.worked_on, format: :short) %></td>
        <td>
          <% if day.worked_on.wday == 6 %>
            <font color="Blue"><%= $days_of_the_week[day.worked_on.wday] %></font>
          <% elsif day.worked_on.wday == 0 %>
             <font color="Red"><%= $days_of_the_week[day.worked_on.wday] %></font>
          <% else %>
             <%= $days_of_the_week[day.worked_on.wday] %>
          <% end %>  
    　    <td></td>
    　    <td></td>
    　    <td>
      　   <% if btn_text = attendance_state(day) %>
        　 <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
      　   <% end %>
    　    </td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
    　    <td></td>
         </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <td colspan = "2".rowspan = "5"></td>
      <td colspan = "6".rowspan = "5"></td>
      <td rowspan = "5"></td>
      <td colspan = "5".rowspan = "5"></td>
      <td rowspan = "5"></td>
      <td>
        <p><%= "所属長承認　未" %></p>
        <select class="form-control">
          <option>上長A</option>
          <option>上長B</option>
        </select>
      <br><%= link_to "申請", "" , class: "btn btn-primary" %></br>
      </td>
  </table>
</div>
</div>

