<% provide(:class_text, 'basic-month') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【<%= @user.name %>からの1ヶ月勤怠申請】</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_month_user_attendance_path(@user), local: true, method: :patch) do |f| %>
          
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
             <tr>
               <td>月</td>
               <td>指示者確認㊞</td>
               <td>変更</td>
               <td>勤怠を確認する</td>
             </tr>
             <% @attendances.each do |month| %>
          　　<%= f.fields_for "attendances[]", day do |attendance| %>
             <tr>
               <td><%= l(month, format: :short) %></td>
               <td><%= attendance.select :month_approval, Attendance.month_approvals.keys.to_a, { include_blank: true } %></td>
               <td><%= attendance.check_box :month_check %></td>
               <td><%= link_to "確認", "" , class: "btn btn-primary" %></td>
             </tr>
             <% end %>
              <% end %>
          </table>   
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

